opcao = 1
while opcao == 1:
    soma, qtd = 0, 0
    while qtd < 2:
        nota = float(input())
        if 0 <= nota <= 10:
            soma += nota
            qtd += 1
        else:
            print("nota invalida")
    print(f"media = {soma / 2:.2f}")
    
    opcao = 0
    while opcao != 1 and opcao != 2:
        print("novo calculo (1-sim 2-nao)")
        opcao = int(input()) 
